{
  "name": "crgalaticos.github.io",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build-css": "node-sass-chokidar src/scss -o build/css",
    "watch-css": "yarn run build-css && node-sass-chokidar src/scss -o build/css --watch --recursive",
    "babel": "babel --presets es2015 src/js/main.js -o build/js/main.bundle.js -w",
    "start-server": "http-server",
    "start": "npm-run-all -p start-server babel watch-css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crgalaticos/crgalaticos.github.io.git"
  },
