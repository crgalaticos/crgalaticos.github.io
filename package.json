  "bugs": {
    "url": "https://github.com/crgalaticos/crgalaticos.github.io/issues"
  },
  "homepage": "https://github.com/crgalaticos/crgalaticos.github.io#readme",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.1.2"
  },
  "devDependencies": {
    "http-server": "^0.11.1"
  }
}
